{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./cjs",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"]
}
