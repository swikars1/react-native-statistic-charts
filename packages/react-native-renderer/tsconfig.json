{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./cjs",
    "jsx": "react",
    "noEmit": false,
    "allowJs": false,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"]
}
